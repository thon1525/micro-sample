{
  "name": "auth-service",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "description": "Authentication microservice for our micro sample app",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon --legacy-watch -r tsconfig-paths/register src/server.ts",
    "start": "pm2 start ./build/ecosystem.config.js",
    "stop": "pm2 stop all",
    "restart": "pm2 restart ./build/ecosystem.config.js",
    "delete": "pm2 delete all",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && cp -R configs ./build/ && cp private_key.pem ./build/ && cp ecosystem.config.js ./build/ && cp package.json ./build/",
    "test": "cross-env NODE_ENV=testing jest --coverage=true --detectOpenHandles --watchAll=false",
    "gen:spec": "tsoa spec",
    "gen:routes": "tsoa routes",
    "gen:all": "npm run gen:spec && npm run gen:routes",
    "clean": "rm -rf ./build && rm -rf ./src/**/*.js && rm -rf ./src/**/*.js.map"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.test.ts"
    ]
  },
  "author": "Sokritha Yen",
  "dependencies": {
    "@types/on-headers": "^1.0.3",
    "amqplib": "^0.10.4",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "on-headers": "^1.0.2",
    "redoc-express": "^2.1.0",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.2.0",
    "winston": "^3.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.7",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-alias": "^0.0.7",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "typescript-transform-paths": "^3.4.7"
  }
}